# Database
POSTGRES_USER={{ vault_postgres_user }}
POSTGRES_PASSWORD={{ vault_postgres_password }}
POSTGRES_DB={{ vault_postgres_db }}
DB_URL={{ vault_db_url }}

# Gorilla Sessions
SESSION_KEY={{ vault_session_key }}

# Google OAuth
GOOGLE_CLIENT_ID={{ vault_google_client_id }}
GOOGLE_CLIENT_SECRET={{ vault_google_client_secret }}
GOOGLE_URL_CALLBACK={{ vault_google_url_callback }}

# JWT
JWT_KEY={{ vault_jwt_key }}

# Stripe
STRIPE_SECRET_KEY={{ vault_stripe_secret_key }}
STRIPE_WEBHOOK_KEY={{ vault_stripe_webhook_key }}

# MailGun
MAILGUN_API_KEY={{ vault_mailgun_api_key }}
MAILGUN_SUBDOMAIN={{ vault_mailgun_subdomain }}

# Application
PORT={{ app_port }}
APP_ENV={{ app_environment }}
API_ORIGIN={{ vault_api_origin }}
FRONTEND_ORIGIN={{ vault_frontend_origin }}

# Cloudflare R2
R2_ACCOUNT_ID={{ vault_r2_account_id }}
R2_BUCKET_NAME={{ vault_r2_bucket_name }}
ADMIN_R2_ACCESS_KEY_ID={{ vault_admin_r2_access_key_id }}
ADMIN_R2_SECRET_ACCESS_KEY={{ vault_admin_r2_secret_access_key }}
PUBLIC_R2_ACCESS_KEY_ID={{ vault_public_r2_access_key_id }}
PUBLIC_R2_SECRET_ACCESS_KEY={{ vault_public_r2_secret_access_key }}

# Build Configuration
CGO_ENABLED={{ cgo_enabled }}

{% if is_staging %}
# Beszel Monitoring
BESZEL_HUB_APP_URL={{ vault_beszel_hub_app_url }}
BESZEL_AGENT_LISTEN={{ vault_beszel_agent_listen }}
BESZEL_AGENT_KEY={{ vault_beszel_agent_key }}
BESZEL_AGENT_TOKEN={{ vault_beszel_agent_token }}
BESZEL_AGENT_HUB_URL={{ vault_beszel_agent_hub_url }}
{% endif %}
