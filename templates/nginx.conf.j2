events {
    worker_connections 1024;
}

http {
    sendfile on;
    keepalive_timeout 65;

    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log;

    map $http_cf_connecting_ip $limit_client {
        default $http_cf_connecting_ip;
        ""      $binary_remote_addr;
    }

    limit_req_zone $limit_client zone=api_rps:10m rate=10r/s;
    limit_req_zone $limit_client zone=auth_rpm:1m rate=10r/m;

    gzip on;
    gzip_vary on;
    gzip_proxied any;
    gzip_comp_level 5;
    gzip_min_length 1000;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_disable "msie6";
    gzip_types
        text/plain
        text/css
        text/xml
        application/xml
        application/xml+rss
        application/atom+xml
        application/json
        application/javascript
        text/javascript;

{% if is_staging %}
    map $http_upgrade $connection_upgrade {
        default upgrade;
        '' close;
    }
{% endif %}

    upstream gotenberg_upstream {
        server gotenberg1:3000;
        server gotenberg2:3000;
        server gotenberg3:3000;
    }

    server {
        listen 3000;
        server_name localhost;

        location / {
            proxy_pass http://gotenberg_upstream;
            proxy_read_timeout 300s;
            proxy_connect_timeout 10s;
        }
    }

    server {
        listen 443;
        server_name {{ api_hostname }};

        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" always;
        add_header X-Content-Type-Options "nosniff" always;
        add_header Referrer-Policy "no-referrer" always;

        location /nginx-health {
            return 200;
        }

        location = /api/auth/login {
            limit_req zone=auth_rpm burst=5 nodelay;
            limit_req_status 429;
            proxy_pass http://api:8080;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location = /api/auth/register {
            limit_req zone=auth_rpm burst=5 nodelay;
            limit_req_status 429;
            proxy_pass http://api:8080;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }

        location / {
            limit_req zone=api_rps burst=20 nodelay;
            proxy_pass http://api:8080;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

{% if is_staging %}
    server {
        listen 80;
        server_name {{ monitor_hostname }};

        location / {
            proxy_pass http://beszel:8090;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;

            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection $connection_upgrade;
            proxy_read_timeout 86400;
        }
    }
{% endif %}
}
